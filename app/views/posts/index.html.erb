<div class="index">

<div class = "parttwo">
    <h5> Eating and drinking my way through Jonathan Gold's 101 Best Restaurants and Eater LA </h5><br>
    <%= link_to image_tag("insta.png", :class => "social", :alt => "Instagram"), "https://www.instagram.com/gilty_pleasures/", :target => "_blank" %>
    <%= link_to image_tag("facebook.png", :class => "social", :alt => "Facebook"), "https://www.facebook.com/giltyyy", :target => "_blank" %>
    <%= link_to image_tag("pinterest.png", :class => "social", :alt => "Pinterest"), "https://www.pinterest.com/emmagilhuly/", :target => "_blank" %>
    <a href=""><img class="social" src="/images/social.png"></a>
</div>

<h5> Emma Gilhuly </h5>

<p id="notice"><%= notice %></p>


<div class="container allposts">
  <div class="row">
    <div class="col-md-8">
        <% @posts.last(5).reverse.each do |post| %>
          <tr>
            <p><%= link_to post.title, post %></p>
            <p><%= post.body.truncate(250) %></p>
            <div class="indexpost">
              <% if post.post_attachments.first %>
                <%= image_tag (post.post_attachments.first.try(:avatar_url)) %> <br>
              <% end %>
              <button> <%= link_to "Read more", post %></button><br>
            </div>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr> <br><br><br>
        <% end %>
        <div class="digg_pagination">
            <%= will_paginate @posts, :container => false %>
        </div>
        <p> <%= link_to 'New Post', new_post_path %> </p>
      </div>
      <div class="col-md-4 sidebar">
        <h6> Featured Posts </h6><br>
        <div class="sidebarposts">
          <% @posts.limit(6).order("RANDOM()").each do |post| %>
            <% if post.post_attachments.first %>
                <%= image_tag (post.post_attachments.first.try(:avatar_url)) %> <br><br>
                <p class="sidebar"><%= link_to post.title, post %></p> <br><br>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>


</div>
