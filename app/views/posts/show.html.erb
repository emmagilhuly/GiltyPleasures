<p id="notice"><%= notice %></p>

<div class="center">
<%= render :partial => @post %>


<p><%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %></p>


<p>Comments</p>
<div id="comments">
        <%= render :partial => @post.comments %>
</div>

<%= form_for [@post, Comment.new] do |f| %>
        <p>
                <%= f.label :body, "New comment" %><br/>
                <%= f.text_area :body %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>
